@section ControlsSection{
    <div class="control-section">
        <div class="control-wrapper">
            <div class="control-section">
                @Html.EJS().RichTextEditor("default").Value((string)ViewBag.value).ToolbarSettings( e => e.Items((object)ViewBag.items)).Render()
            </div>
        </div>
    </div>

}

