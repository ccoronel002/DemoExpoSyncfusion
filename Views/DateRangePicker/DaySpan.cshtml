@using Syncfusion.EJ2
@section ControlsSection{
    <div class="col-lg-12 control-section">
        <div id="wrapper">
            @Html.EJS().DateRangePicker("daterange").Placeholder("Select a Range").MinDays(4).MaxDays(10).Render()
        </div>
    </div>

    <style>
        #wrapper {
            max-width: 246px;
            margin: 30px auto;
            padding-top: 50px;
        }
    </style>

}

@section ActionDescription{
    <div id="action-description">
        <p>
            In this sample, your date range selection is restricted to select <code>minimum</code> four days and <code>maximum</code> ten days.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            DateRangePicker has <code>minDays</code> and <code>maxDays</code> supports to force the user to select the minimum and maximum number of days in the range. Only the values in this range will be enabled.
        </p>
        <p>
            For example, in some hotel booking website, we need to book rooms that includes packages like minimum 3 days to maximum 4 days. For this scenario this feature can be used.
        </p>
        <p>
            More information on the DateRangePicker minDays/maxDays support can be found in the
            <a href="http://ej2.syncfusion.com/documentation/daterangepicker/range-restriction.html#range-span"
               target="_blank">documentation section</a>.
        </p>
    </div>
}

