@using Syncfusion.EJ2

@section ControlsSection{
    <div class="col-lg-12 control-section default">

        <div class="sample_container badge-accordion">
            @Html.EJS().Accordion("accordion").Created("created").Items(ViewBag.accordionItems).Render()
        </div>
    </div>
}
<script type="text/javascript">
    var badgeContent = ["7 New", "27 New", "2 New", "14 New"];
    function created() {
        // Appending Badge component after the accordion rendered in created event
        var element = document.getElementById('accordion');
        var iconElement = Array.prototype.slice.call((element).querySelectorAll('.e-toggle-icon'));
        for (var i = 0; i < iconElement.length; i++) {
            // Success Badge Element
            var badge = document.createElement("SPAN");
            badge.className = "e-badge e-badge-success";
            badge.textContent = badgeContent[i];
            iconElement[i].appendChild(badge);
        }
    }
</script>

@section ActionDescription{
    <p>This sample demonstrates the integration of badges in to accordion component to display the thread notification count.</p>
}

@section Description{
    <p>
        The badge can be integrated in to the accordion with help of the templates to display count of new message in the message
        thread. Here the Success badge is used in the accordion. To add success badge add
        <code>.e-badge-success</code>.
    </p>
}

    <style>
    .control-section {
        overflow: auto;
    }

    .sample_container.badge-accordion {
        max-width: 350px;
        margin: auto;
