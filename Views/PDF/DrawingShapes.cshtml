@section ControlsSection{

    <div class="control-section">
        @{Html.BeginForm("DrawingShapes", "Pdf", FormMethod.Post);
            {
               <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                                <table width="100%">
                                    <tr>
                                        <td>
                                            Click the button to view an PDF document generated by Essential PDF. Please note
                                            that Adobe Reader or its equivalent is required to view the resultant document.
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <br />
                                            <input type="submit" class="e-btn" value="Generate PDF" style="width: 150px; text-transform:capitalize" />
                                        </td>
                                    </tr>
                                </table>
                        </div>
                    </div>
                </div>

                Html.EndForm();
            }}
</div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates drawing of <a href="https://help.syncfusion.com/file-formats/pdf/working-with-shapes">shapes</a>
        such as Ellipse, Arcs, Polygon, Pie, and Rectangle in the PDF document with gradient and <a href="https://help.syncfusion.com/file-formats/pdf/working-with-colorspace">color spaces.</a>
    </div>
}
@section Description{
    <div id="description" style="margin-top: 10px">

    </div>
}
