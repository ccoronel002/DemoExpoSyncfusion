@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to insert an image in a PowerPoint slide.
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Add new images to a PowerPoint slide.</li>
            <li>Insert, delete, replace, and format pictures in a PowerPoint slide.</li>
    </ul>
    <br />
}
@section ControlsSection{
    <div class="control-section">
		@{ViewBag.Title = "    Essential Presentation (Presentation) : Images : Syncfusion";}
		
		@{Html.BeginForm("Images", "Presentation", FormMethod.Post); }
        <div class="tablediv">
            <text class="rowdiv">
                Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
            </text>
        </div>
        <br />
        <div class="tablediv">
            <div class="rowdiv">
                <div class="celldiv">
                    <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                        <table width="100%">
                            <tr>
                                <td align="left" width="100%">
                                    <label><input id="submit" type="submit" class="e-btn" value="Create Presentation" /></label>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
}