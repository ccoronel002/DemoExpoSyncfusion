@using Syncfusion.EJ2
@section ActionDescription{
    This sample demonstrates how to add encryption and decryption in a PowerPoint presentation.
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Encrypt a PowerPoint presentation using agile encryption, like Office 2010 and 2013.</li>
            <li>Decrypt the encrypted PowerPoint presentation using both agile and standard (Office 2007) encryption.</li>
            <li>Mark a PowerPoint presentation as 'Final' or 'Read-only'.</li>
    </ul>
    <br />
}
@section ControlsSection{
    <div class="control-section">
		@{ViewBag.Title = "    Essential Presentation (Presentation) : EncryptAndDecrypt : Syncfusion";}
		
		@{Html.BeginForm("EncryptAndDecrypt", "Presentation", FormMethod.Post);}
        <div class="tablediv">
            <div class="rowdiv">
                <text>
                    Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
                </text>
                <div>
                    <p><b>Note:</b></p>
                    <p>1. The encrypted documents can only be read by Office 2007 SP2 compatibility pack or later Office versions.</p>
                    <p>2. The document used in this sample is encrypted with the password <b>“syncfusion”</b>.</p>
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input type="radio" id="Radio3" name="Group1" value="CreateEncryptDoc" checked="checked" />
                    <label for="Radio3">
                        Encrypt Document
                    </label>
                    <input type="radio" id="Radio4" name="Group1" style="margin-left: 7px" value="CreateDecryptDoc" />
                    <label for="Radio4">
                        Decrypt Document
                    </label>
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input type="submit" class="e-btn" value="Generate Document" style="width:200px;" />
                </div>
                <br />
            </div>
        </div>
    </div>
}