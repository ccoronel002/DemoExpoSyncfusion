@using Syncfusion.EJ2
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('newTab').setAttribute("href", location.href.split("Sidebar")[0] + "Sidebar/SidebarList");
        document.getElementById('newTab').setAttribute("target", "_blank");
        // Expand the Sidebar
    });
</script>

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>

@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new tab</a>
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
        <p>
            Click the button to view the Sidebar sample in new tab.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            In this sample, the ListView component is placed inside the Sidebar for navigation.

        </p>
    </div>
}



