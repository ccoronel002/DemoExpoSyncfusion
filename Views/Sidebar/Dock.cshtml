@using Syncfusion.EJ2
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // open new tab
        document.getElementById('newTab').setAttribute("href", location.href.split("Sidebar")[0] + "Sidebar/SidebarDock");
        document.getElementById('newTab').setAttribute("target", "_blank");

    });

</script>

<style>
    .control-section {
        padding-top: 20px;
        padding-bottom: 20px;
        min-height: 350px;
    }

    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>

@section ControlsSection{
    <div class="control-section">
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new Tab</a>
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
        Click the button to view the Sidebar sample in new tab.
    </div>
}
@section Description{
    <div id="description">
        This sample demonstrates the dock state. Here the list item has icon with text representation. On dock state only the icon
        listed out to interact.
    </div>
}



