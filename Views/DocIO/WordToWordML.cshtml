@using Syncfusion.EJ2
@{ViewBag.Title = "    Essential DocIO (Word) : Export, Word to Word XML, Conversion : Syncfusion";}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("WordToWordML", "DocIO", FormMethod.Post, new { enctype = "multipart/form-data" });
            {
                <div style="margin-top: 10px">
                    Select Document
                    <br />
                    @Html.TextBox("file", "", new { type = "file", accept = ".doc,.docx,.rtf,.dot,.dotm,.dotx,docm,.xml" })
                    <div style="margin-top: 8px">
                        Click the button to view the resultant WordML document generated by Essential DocIO.
                        <div style="margin-top: 8px">
                            <input class="e-btn" type="submit" value="Convert to WordML" name="button" style="width: 170px; text-transform:capitalize" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="text-danger">
                    @ViewBag.Message
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div>
        This sample demonstrates how to convert the Word document to Word processing XML using Essential DocIO.
    </div>
}
@section Description{
    <div>
        DocIO provides support to convert the Word document to Word processing XML document and vice versa.
    </div>
    <div style="margin-top: 15px">
        More information about WordML conversion can be found in this
        <a href="https://help.syncfusion.com/file-formats/docio/word-file-formats#word-processing-xml-xml">documentation</a>
        section.
    </div>
}