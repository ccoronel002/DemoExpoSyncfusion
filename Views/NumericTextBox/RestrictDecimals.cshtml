@using Syncfusion.EJ2.Inputs
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="control-label">
                Numeric TextBox
            </div>
            @Html.EJS().NumericTextBox("numerictextbox").Value(10).Format("n3").Decimals(3).ValidateDecimalOnType(true).Render()
            <div class="control-label">
                Percentage TextBox
            </div>
            @Html.EJS().NumericTextBox("percentage").Format("p3").Decimals(3).ValidateDecimalOnType(true).Value(0.5).Min(0).Max(1).Step(0.01).Render()
            <div class="control-label">
                Currency TextBox
            </div>
            @Html.EJS().NumericTextBox("currency").Format("c3").Decimals(3).Value(100).ValidateDecimalOnType(true).Render()
        </div>
    </div>
</div>

<style>
    .content-wrapper {
        width: 35%;
        margin: 0 auto;
        min-width: 185px;
    }

    .control-label {
        padding: 24px 0px 10px 0px;
        font-size: 12px;
    }

    .e-float-input.e-numeric.e-input-group {
        margin-top: 40px;
    }

    @@media only screen and (max-width: 700px) {
        .numeric-control {
            margin: 20% 0 0 32%;
        }

        .control-section {
            min-height: 200px;
        }
    }

    @@media only screen and (max-width: 500px) {
        .control-section {
            min-height: 200px;
        }
    }
</style>

}



@section ActionDescription{

<div id="action-description">
    <p>This sample demonstrates the decimal functionalities of the Numeric TextBox. Type a value in the input element to change dynamically, and it allows maximum of 3 decimal digits.</p>
</div>


}
@section Description{

<div id="description">
    <p>
        The NumericTextBox provides an option to restrict the number of decimal values, by using the
        <a href="http://ej2.syncfusion.com/documentation/numerictextbox/api-numericTextBox.html#decimals-number" target="_blank"> decimals</a> property. To restrict the number of decimal values on typing, use the <a href="http://ej2.syncfusion.com/documentation/numerictextbox/api-numericTextBox.html#decimals-number" target="_blank"> decimals</a> and <a href="http://ej2.syncfusion.com/documentation/numerictextbox/api-numericTextBox.html#validatedecimalontype-boolean" target="_blank"> validateDecimalOnType</a> properties.
    </p>
    <p>
        More information on the restrict decimals configuration can be found in the
        <a href="http://ej2.syncfusion.com/aspnet/documentation/numerictextbox/getting-started.html?syntax=mvc#precision-of-numbers" target="_blank"> documentation section</a>.
    </p>
</div>

}
