@using Syncfusion.EJ2;

@section ActionDescription{
    This sample demonstrates how to use TemplateMarker in spreadsheets using XlsIO.
}

@section Description{
    A template marker is a special marker symbol created in an Excel template that will be bound to data.
    <br />
    <br />Essential XlsIO allows you to create and bind markers with data from various sources, such as data tables, variables, and arrays. This allows users to control the format of the data when it is bound to a template document.
    <br />
}
@section ControlsSection{
    @{Html.BeginForm("TemplateMarker", "XlsIO", FormMethod.Post);
    <div class="control-section">
        <div class="rowdiv">
            <p>
                Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
            </p>
        </div>
        <br />
        <div class="rowdiv">
            <div class="celldiv">
                Import Options
                <br />
                <table>
                    <tr>
                        <td style="width:150px;">
                            @Html.EJS().RadioButton("datatable").Label("DataTable").Name("type").Value("datatable").Checked(true).Render()
                        </td>
                        <td style="width:150px;">
                            @Html.EJS().RadioButton("businessobjects").Label("Business Objects").Name("type").Value("Objects").Checked(false).Render()
                        </td>
                    </tr>
                </table>
                <br />
            </div>
            <div class="celldiv">
                Marker With Images
                <br />
                @Html.EJS().RadioButton("imageonly").Label("Image Only").Name("typeOfImage").Value("ImageOnly").Checked(true).Render()
                <br />
                @Html.EJS().RadioButton("imagewithsize").Label("Image With Size").Name("typeOfImage").Value("ImageWithSize").Checked(false).Render()
                <br />
                @Html.EJS().RadioButton("imagewithposition").Label("Image With Position").Name("typeOfImage").Value("ImageWithPosition").Checked(false).Render()
                <br />
                @Html.EJS().RadioButton("imagewithsizeandposition").Label("Image With Size And Position").Name("typeOfImage").Value("ImageWithSizeAndPosition").Checked(false).Render()
                <br />
                @Html.EJS().RadioButton("imagefittocell").Label("Image Fit To Cell").Name("typeOfImage").Value("ImageFitToCell").Checked(false).Render()
                <br />
            </div>
            <br />
            <div class="celldiv">
                <table>
                    <tr>
                        <td>
                            <input id="generate" class="e-btn" type="submit" name="button" value="Create Document" style="width:150px;" />
                        </td>
                        <td style="width:10px;">
                            &nbsp;
                        </td>
                        <td>
                            <input id="viewtemplate" class="e-btn" type="submit" name="button" value="Input Template" style="width:140px;" />
                        </td>
                    </tr>
                </table>
            </div>
       </div>
    
        </div>
        }
}